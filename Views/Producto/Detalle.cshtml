@model PruebaTecnica.Models.Producto

@{
    ViewData["Title"] = "Detalle";
}

<div class="card">
    <div class="card-header">
        <div class="col-md-6">
            Detalle producto
        </div>
        <div class="col-md-6 float-right ">
            <div class="btn-group float-right" role="group" aria-label="Third group">
                <a asp-action="Edit" asp-route-id="@Model.Id"><i data-feather="edit-2"></i></a>
            </div>
            <div class="btn-group float-right" role="group" aria-label="Third group">
                <a asp-action="Index"><i data-feather="list"></i></a>
            </div>
        </div>
    </div>
    <div class="card-body">

            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="Codigo" class="control-label"></label>
                    <input asp-for="Codigo" readonly class="form-control" />

                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" readonly class="form-control" />

                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" readonly class="form-control" />

                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-12">
                    <label asp-for="Descripcion" class="control-label">Teléfono</label>
                <textarea asp-for="Descripcion" readonly rows="3" cols="6" class="form-control"></textarea>

                </div>
            </div>



    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/scripts/producto.js"></script>
}
