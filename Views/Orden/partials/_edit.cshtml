@model PruebaTecnica.Models.Orden

@{ ViewData["Title"] = "Editar";
    
}

<div class="card">
    <div class="card-header">
        <div class="col-md-6">
            Editar Orden
        </div>
        <div class="col-md-6 float-right">
            <a class="btn btn-primary float-right" id="guardarOrden" href="#" role="button">Editar</a>
        </div>
        
    </div>
    <div class="card-body">
        <form id="formOrden" asp-action="Edit" class="mt-3 g-3 needs-validation" novalidate >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col-md-4">
                    <label asp-for="NumeroOrden" class="control-label">Número de orden</label>
                    <input type="text" readonly asp-for="NumeroOrden" class="form-control"  />                    
                </div>
                <div class="col-md-4">
                <input type="hidden" asp-for="ClienteId" required />
                    <label asp-for="ClienteId" class="control-label" >Cliente</label>
                    <div class="input-group mb-3">
                        <input type="text"  id="clienteNombre" readonly class="form-control" placeholder="Cliente" 
                        aria-label="Cliente" aria-describedby="btnCliente" value="@(Model.Cliente.Nombres+" "+ Model.Cliente.Apellidos)" required  />
                        <div class="input-group-append">
                            <a class="btn btn-outline-secondary" href="#"  id="btnCliente">Buscar</a>
                        </div>
                    </div>

                </div>
                <div class="col-md-4">
                    <label asp-for="Fecha" class="control-label"></label>
                    <input type="date" id="Fecha" name="Fecha" value="@Model.Fecha.ToString("yyyy-MM-dd")"  class="form-control" required/>
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>
            </div>

            <br />

            <div class="card">
              <div class="card-header float-right">
                 <a class="btn btn-primary float-right" id="agregarProducto" href="#" role="button">Agregar Producto</a>
              </div>
              <div class="card-body">
                <table class="table" style="width:100%" id="ordenProducto_table">
                  <thead>
                      <tr>
                          <th>
                              Codigo
                          </th>
                          <th>
                              Producto
                          </th>
                          <th>
                              Cantidad
                          </th>
                          <th>
                              Precio
                          </th>
                          <th>
                              Importe
                          </th>
                          <th></th>
                      </tr>
                  </thead>
                  <tbody >

                  </tbody>
                </table>
              </div>
            </div>

        </form>
    </div>
</div>


@section Scripts{



}